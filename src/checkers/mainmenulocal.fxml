<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:controller="checkers.MenuLocalController" fx:id="mainPane" stylesheets="@menustyle.css" xmlns:fx="https://javafx.com/fxml" id="pane" >
    <top>
        <Label BorderPane.alignment="TOP_CENTER" text="CHECKERS" id="title-label"/>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <BorderPane.margin>
                <Insets>
                    <top>25</top>
                </Insets>
            </BorderPane.margin>
            <Button fx:id="singlePlayerBtn"  id="play-btn" prefWidth="225" prefHeight="55" text="SINGLE PLAYER"/>
            <Button fx:id="twoPlayerBtn"  id="play-btn" prefWidth="225" prefHeight="55" text="TWO PLAYERS"/>

        </VBox>
    </center>
    <bottom>
        <Button onAction="#handleGoBackBtn" fx:id="goBackBtn" id="cancel-btn" prefWidth="175" prefHeight="35" text="GO BACK" BorderPane.alignment="BOTTOM_CENTER" >
            <BorderPane.margin>
                <Insets>
                    <bottom>33</bottom>
                </Insets>
            </BorderPane.margin>

        </Button>
    </bottom>


</BorderPane>
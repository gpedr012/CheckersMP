<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:controller="checkers.MenuController" stylesheets="@menustyle.css" xmlns:fx="https://javafx.com/fxml" id="pane" >
    <top>
        <Label BorderPane.alignment="TOP_CENTER" text="CHECKERS" id="title-label"/>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <BorderPane.margin>
                <Insets>
                    <top>25</top>
                </Insets>
            </BorderPane.margin>
            <Button fx:id="localBtn" id="play-btn" prefWidth="200" prefHeight="55" text="LOCAL PLAY"/>
            <Button fx:id="onlineBtn" id="play-btn" prefWidth="200" prefHeight="55" text="ONLINE PLAY"/>

        </VBox>
    </center>
    <bottom>
        <Button fx:id="quitBtn" id="play-btn" prefWidth="175" prefHeight="35" text="QUIT" BorderPane.alignment="BOTTOM_CENTER" >
            <BorderPane.margin>
                <Insets>
                    <bottom>33</bottom>
                </Insets>
            </BorderPane.margin>

        </Button>
    </bottom>


</BorderPane>